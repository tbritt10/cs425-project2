    <Resource
        
        auth="Container"
        autoReconnect="true"
        driverClassName="com.mysql.jdbc.Driver"
        initialSize="10"
        logAbandoned="true"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        name="jdbc/auth"
        password="CS425!Project2"
        removeAbandoned="true"
        removeAbandonedTimeout="60"
        testOnBorrow="true"
        testOnReturn="false"
        type="javax.sql.DataSource"
        url="jdbc:mysql://localhost:3306/cs425_p2?zeroDateTimeBehavior=convertToNull"
        useSSL="false"
        username="p2_auth"
        validationQuery="SELECT 1"
        validationQueryTimeout="-1"
        
    />
    
    <Resource
        
        auth="Container"
        autoReconnect="true"
        driverClassName="com.mysql.jdbc.Driver"
        initialSize="10"
        logAbandoned="true"
        maxActive="100"
